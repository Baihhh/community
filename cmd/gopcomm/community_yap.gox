import "github.com/goplus/community/cmd/gopcomm/internal/config"

get "/p/:id", ctx => {
	ctx.yap "article", {
		"id": ctx.param("id"),
	}
}
get "/", ctx => {
	ctx.yap "home", {
	}
}
get "/user/:id", ctx => {
	ctx.yap "user", {
		"id": ctx.param("id"),
	}
}
get "/login", ctx => {
	ctx.yap "login", {}
}
get "/register", ctx => {
	ctx.yap "register", {}
}

config.ConfigInit("./config.yaml")
println(config.Config)
println "Community server running on :8080"
run ":8080"
