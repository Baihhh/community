import "github.com/goplus/community/internal/core"

get "/article/:id", ctx => {
	param := ctx.param("id")
	println "Visiting article " + param
	s := core.NewArticleService()
	info, _ := s.GetArticle(param)

	ctx.yap "article", {
		"id": info.Id,
		"title": info.Title,
		"content": info.Content,
	}
}
get "/", ctx => {
	ctx.yap "home", {
	}
}
get "/user/:id", ctx => {
	ctx.yap "user", { 
		"id": ctx.param("id"),
	}
}

println "Community server running on :8080"
run ":8080"
